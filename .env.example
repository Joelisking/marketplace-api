# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ======================
# SERVER CONFIGURATION
# ======================
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# ======================
# DATABASE
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5432/marketplace_db

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ======================
# S3/MINIO STORAGE
# ======================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=marketplace-images
S3_REGION=us-east-1
CDN_BASE_URL=http://localhost:9000

# ======================
# PAYSTACK PAYMENT (Ghana)
# ======================
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_PLATFORM_SUBACCOUNT_CODE=ACCT_your_platform_subaccount
PAYSTACK_WEBHOOK_SECRET=whsec_your_webhook_secret

# Platform fee percentage (default 5%)
PLATFORM_FEE_PERCENTAGE=5

# Escrow auto-release days (default 5 days after delivery)
ESCROW_AUTO_RELEASE_DAYS=5

# ======================
# EMAIL SERVICE (RESEND)
# ======================
EMAIL_PROVIDER=resend
# Get free API key at https://resend.com (3000 emails/month free)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=onboarding@yourdomain.com

# Alternative: Use mock for development (logs to console)
# EMAIL_PROVIDER=mock

# ======================
# SMS SERVICE (ARKESEL)
# ======================
SMS_PROVIDER=arkesel
# Get API key at https://arkesel.com
ARKESEL_API_KEY=your_arkesel_api_key
ARKESEL_SENDER_ID=MERCHANT
# Set to true for testing without sending real SMS
ARKESEL_SANDBOX=true

# Alternative: Use mock for development (logs to console)
# SMS_PROVIDER=mock

# ======================
# GHANA CARD VERIFICATION (OPTIONAL)
# ======================
# These are optional - Ghana Card photos will be stored for record keeping
# No automatic verification is performed
NIA_API_KEY=your_nia_api_key_if_needed
GOOGLE_VISION_API_KEY=your_google_vision_api_key_if_needed
AWS_ACCESS_KEY_ID=your_aws_access_key_if_needed
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_if_needed

# ======================
# NOTIFICATION SETTINGS
# ======================
# Enable/disable notification channels
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# ======================
# RATE LIMITING
# ======================
# General API rate limit (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth endpoints rate limit (requests per minute)
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# ======================
# CORS SETTINGS
# ======================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ======================
# FEATURE FLAGS
# ======================
# Enable/disable features during development
ENABLE_CHAT=true
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true
ENABLE_ESCROW=true
ENABLE_DISPUTES=true

# ======================
# DEVELOPMENT TOOLS
# ======================
# Prisma Studio (database GUI)
# Run: npx prisma studio
# PRISMA_STUDIO_PORT=5555
